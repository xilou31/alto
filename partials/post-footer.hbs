<footer class="post-footer">
    <div class="post-action">
        <a class="post-link primary" href="{{url}}">阅读全文 </a>
	<a class="post-link secondary" href="https://getpocket.com/save?url={{url absolute="true"}}"
            target="_blank" rel="noopener">稍后再读 </a>
	</div>
    
    <div class="post-author">
        {{#foreach authors}}
            {{#if profile_image}}
		<a class="post-author-image-link" href="{{url}}">
                    <img class="post-author-image" src="{{img_url profile_image size="xs"}}" alt="{{name}}">
                </a>
            {{/if}}
        {{/foreach}}
        <div class="post-author-name hidden-xs hidden-sm">
            <span class="post-author-by">作者: </span>
            {{#foreach authors}}<a class="post-author-name-link" href="{{url}}">{{name}}</a>{{/foreach}}
	</div>
    </div>
</footer>
